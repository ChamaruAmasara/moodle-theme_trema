{{!
    Modal info for /course and list of courses available (site home).
}}

<div class="btn-modal text-center position-absolute w-100">
    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#{{uniqid}}-modal-title">
        {{#str}}summarybutton_text, theme_trema{{/str}}
    </button>
</div>

<div id="{{uniqid}}-modal-title" class="modal moodle-has-zindex" data-region="modal-container" aria-hidden="true" role="dialog">
<div class="modal-dialog course-modal-dialog" role="document" data-region="modal" aria-labelledby="{{uniqid}}-modal-title" tabindex="0">
<div class="modal-content">
<div class="modal-header" data-region="header">
<h5 id="{{uniqid}}-modal-title" class="modal-title" data-region="title">{{#title}}{{title}}{{/title}}</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label={{#quote}}{{#str}}closebuttontitle{{/str}}{{/quote}}>
        <span aria-hidden="true">&times;</span>
    </button>
</div>
    <div class="modal-body" data-region="body">
        {{{body}}}
    </div>
    <div class="modal-footer" data-region="footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{#str}}closebuttontitle{{/str}}</button>
        <a href="{{courselink}}" class="btn btn-primary">{{#str}}summarycourselink_text, theme_trema{{/str}}</a>
    </div>
</div>
</div>
</div>
